// Task 1: Function to create a map of colors and return it
function createColorMap() {
  // Create a map of colors
  const colorMap = new Map([
    ["red", "#FF0000"],
    ["green", "#00FF00"],
    ["blue", "#0000FF"],
    ["yellow", "#FFFF00"],
    ["orange", "#FFA500"],
    ["purple", "#800080"],
  ]);

  // Return the color map
  return colorMap;
}

// Task 2: First function to print key and value
function printKeyValue(key, value) {
  console.log(`Key: ${key}, Value: ${value}`);
}

// Second function to utilize forEach and print key-value pairs
function printColorMap() {
  // Call the function from Task 1 and use its return value
  const colorMap = createColorMap();

  // Use forEach method to print key-value pairs
  colorMap.forEach(printKeyValue);
}

// Call the second function to print key-value pairs
printColorMap();
